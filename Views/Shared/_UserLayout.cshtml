@using System.Security.Claims
@{
    Layout = null;
    var jogadorId = int.Parse(User.FindFirst(ClaimTypes.NameIdentifier).Value);
    var isAdmin = User.IsInRole("Admin");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ProEvoStats</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="~/css/userlayout.css" />
</head>
<body>

    <div class="navbar navbar-expand-lg rounded-lg panel mt-3 mx-auto col-md-10" style="background-color: rgba(30, 60, 82, 0.8);">
        <a class="navbar-brand" asp-controller="User" asp-action="UserProfile">
            <img src="@Url.Content("~/images/ProEvoStatsLogoWhite.png")" alt="Logo" height="30">
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                @if (isAdmin)
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index"><i class="bi bi-gear-fill" style="font-size : 24px;"></i></a>
                    </li>
                }
                @* <li class="nav-item">
                    <a class="nav-link" asp-controller="User" asp-action="UserProfile"><i class="bi bi-house-door-fill" style="font-size : 24px;"></i></a>
                </li> *@
                <li class="nav-item">
                    <form method="post" asp-controller="Auth" asp-action="Logout">
                        <button type="submit" class="btn btn-link nav-link text-danger"><i class="bi bi-box-arrow-right" style="font-size: 24px;"></i></button>
                    </form>
                </li>
            </ul>
        </div>
    </div>


    <div class="container-fluid">
        @RenderBody()
    </div>

    @RenderSection("Scripts", required: false)

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>
</html>
